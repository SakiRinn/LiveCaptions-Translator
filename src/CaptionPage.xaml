<Page
    x:Class="LiveCaptionsTranslator.CaptionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LiveCaptionsTranslator"
    xmlns:localModel="clr-namespace:LiveCaptionsTranslator.models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="CaptionPage"
    mc:Ignorable="d">

    <Grid Margin="15,10,15,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style x:Key="CaptionBlockStyle" TargetType="TextBlock">
                <Setter Property="TextWrapping" Value="Wrap" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
            </Style>
        </Grid.Resources>

        <ui:Card
            Grid.Row="0"
            Padding="8"
            VerticalAlignment="Stretch">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBox
                    x:Name="PresentedCaption"
                    Grid.Row="0"
                    Padding="10,3,10,3"
                    AcceptsReturn="True"
                    Background="Transparent"
                    BorderThickness="0"
                    FontFamily="Segoe UI Variable Text"
                    FontSize="15"
                    IsReadOnly="True"
                    Text="{Binding PresentedCaption}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
                <TextBox
                    x:Name="TranslatedCaption"
                    Grid.Row="1"
                    Padding="10,3,10,3"
                    AcceptsReturn="True"
                    Background="Transparent"
                    BorderThickness="0"
                    FontFamily="Segoe UI Variable Text Semibold"
                    FontSize="15"
                    IsReadOnly="True"
                    Text="{Binding TranslatedCaption, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
            </Grid>
        </ui:Card>

        <ui:Card
            Grid.Row="2"
            Margin="0,3,0,0"
            Padding="8"
            VerticalAlignment="Top"
            Background="#05000000">

            <ItemsControl ItemsSource="{Binding CaptionHistory}" VirtualizingPanel.IsVirtualizing="True">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="0,0,0,5"
                            Padding="10,5,10,5"
                            BorderBrush="#50000000"
                            BorderThickness="0,0,0,1">
                            <StackPanel>
                                <TextBox
                                    Margin="0,0,0,0"
                                    Padding="10,3,10,3"
                                    AcceptsReturn="True"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable Text"
                                    FontSize="13"
                                    IsReadOnly="True"
                                    Text="{Binding Original}"
                                    TextWrapping="Wrap"
                                    VerticalScrollBarVisibility="Auto" />
                                <TextBox
                                    Margin="0,0,0,0"
                                    Padding="10,3,10,3"
                                    AcceptsReturn="True"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable Text Semibold"
                                    FontSize="13"
                                    IsReadOnly="True"
                                    Text="{Binding Translated}"
                                    TextWrapping="Wrap"
                                    VerticalScrollBarVisibility="Auto" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ui:Card>

        <DockPanel
            Grid.Row="3"
            Margin="0,5,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <ui:Button
                x:Name="Delete"
                HorizontalAlignment="Right"
                Appearance="Transparent"
                Click="ClearHistory_Click"
                Icon="{ui:SymbolIcon Delete12,
                                     Filled=False}"
                MouseOverBackground="#07000000" />
        </DockPanel>
    </Grid>
</Page>
